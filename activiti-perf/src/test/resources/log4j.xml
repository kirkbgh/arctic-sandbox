<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration>
	<appender name="R" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{MMM-dd HH:mm:ss}-%-5p [%c] - %m%n" />
		</layout>
	</appender>

	<logger name="java.sql">
		<level value="info" />
	</logger>

	<logger name="org.springframework">
		<level value="warn" />
	</logger>

	<logger name="org.springframework.jdbc">
		<level value="info" />
	</logger>

	<logger name="org.apache">
		<level value="warn" />
	</logger>

	<logger name="org.activiti">
		<level value="info" />
	</logger>

	<logger name="org.mybatis">
		<level value="info" />
	</logger>

	<logger name="openjpa.Runtime">
		<level value="warn" />
	</logger>

	<logger name="com.digitalriver">
		<level value="info" />
	</logger>

	<logger name="org.activiti.engine.impl.persistence.entity">
		<level value="debug" />
	</logger>

	<logger name="com.scratch">
		<level value="info" />
	</logger>

	<root>
		<level value="all" />
		<appender-ref ref="R" />
	</root>

</log4j:configuration>
